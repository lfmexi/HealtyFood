<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
            
        -->        
    </style>

    <style name="estilo" parent="android:style/Widget.Holo.Light.ActionBar">
		<item name="android:background">#9CC916</item> 
        <item name="android:titleTextStyle"  tools:targetApi="11">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle"  tools:targetApi="11">@style/NoTitleText</item>
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<item name="android:actionBarStyle" tools:targetApi="11">@style/estilo</item>
    </style>
    
    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
</style>
</resources>
